<h1>Users</h1>
</br>
<%= button_to 'Add', new_user_path, :class => 'btn blue', :method => :get %>
</br>
<table class="table">
  <thead>
  <th>Name</th>
  <th>Surname</th>
  <th>Email</th>
  <th>Admin</th>
  <th colspan="3"></th>
  </thead>
  <tbody>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.surname %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Tests', display_tests_path(:user_id => user.id) %></td>
      </tr>
  <% end %>
  </tbody>
</table>
