<%= button_to 'Edit', modify_lesson_slides_path(@lesson), :class => 'btn btn-warning edit', :method => 'get' if current_user.admin %>

<div class="row">
  <%= render 'shared/nav' %>
  <div class="col-md-8 col-md-offset-2">
    <% slide_count = 1
       if @slides.first
         @slides.each do |slide| %>
            <div class="box <%= 'hidden' if slide_count != 1 %>" content="<%= slide.id %>">
              <%= markdown(slide.markdown) %>
            </div>
            <% slide_count = slide_count + 1 %>
        <% end %>
    <% else %>
        <div class="box text-center">
          <div class="white-space"></div>
          <h1>To Add slides, click "Edit".</h1>
        </div>
    <% end %>
  </div>
  <div class="col-md-8 col-md-offset-4">
    <nav>
      <ul class="pagination">
        <% count = 1 %>
        <% @slides.each do |slide| %>
            <li class="page <%= 'active' if count == 1 %>">
              <a class="slide" href="#" content="<%= slide.id %>"><%= count %></a></li>
        <% count = count + 1
           end %>
      </ul>
    </nav>
    <a href="/lessons/<%= @lesson.id %>/test">
      <button type="button" class="btn btn-success pull-right">Next</button>
    </a>
    <p><%= @lesson.description %></p>
  </div>
</div>





