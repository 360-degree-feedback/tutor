<div class="jumbotron">
  <div class="row">
    <div class="col-md-6">
      <%= image_tag 'tutor3.png', :class => 'img-responsive' %>
    </div>
    <div class="col-md-4 text-center">
      <h1>Congrats!</h1>
      <p>You've finished all the lessons.</p>
    </div>
    <div class="col-md-1 text-center yellow">
      <span class="glyphicon glyphicon-star"></span>
    </div>

  </div>
</div>
<% if !current_user %>
    <div class="col-md-3">
      <h1>Login</h1>
      <%= render 'user_sessions/form' %>
    </div>
<% elsif !current_user.admin %>
    <div class="col-md-3">
      <h1>Hello <%= current_user.name %></h1>
      <a href="<%= lessons_path %>">
        <button class="btn btn-success btn-lg"><span class="glyphicon glyphicon-book"></span> Continue</button>
      </a>
      </br>
      <a href="<%= users_path %>">
        <button class="btn btn-primary btn-lg padded-top"><span class="glyphicon glyphicon-th-list"></span> History</button>
      </a>
    </div>
<% else %>
    <div class="col-md-3">
      <h1>Hello <%= current_user.name %></h1>
      <a href="<%= users_path %>">
        <button class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-user"></span> Manage Users</button>
      </a>

      <a href="<%= lessons_path %>">
        <button class="btn btn-danger btn-lg padded-top"><span class="glyphicon glyphicon-book"></span> Manage Lessons</button>
      </a>
    </div>
<% end %>
